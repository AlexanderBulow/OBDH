#include <iostream>
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
#include <windows.h>

static char *read_command() {
    const char *rdgrnd = "C:\\Users\\ludwi\\Desktop\\test123.txt";
    FILE *fp = fopen(rdgrnd, "r");

    const unsigned length = 256;
    char cmd[length];

    fgets(cmd, length, fp);

    fclose(fp);
    return cmd;
}


void wipe_file() {
    const char* wpgrnd = "C:\\Users\\ludwi\\Desktop\\test123.txt";
    FILE* fw = fopen(wpgrnd, "w");
    fclose(fw);
}

int main()
{
    while (1) {
        char* cmd = read_command();
        printf("%s\n", cmd);
        wipe_file();
        Sleep(1000);
    }
    return 0;
}